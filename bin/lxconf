#!/bin/bash

if [ "$EUID" -eq 0 ]; then
	LXC_BASE=/var/lib/lxc
else
	LXC_BASE=$HOME/.local/share/lxc
fi

NAME=$1
shift

if ! lxc-ls | grep ^$NAME\$ > /dev/null; then
	echo "Container \"$NAME\" does not exist"
	exit 1
fi

EDITOR=${EDITOR:-$(readlink /etc/alternatives/editor || echo nano)}

$EDITOR $LXC_BASE/$NAME/config
